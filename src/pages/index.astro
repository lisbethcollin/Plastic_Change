	<section  id="problemet">
	<Problemet  ></Problemet>
	</section>
	<Image src={problem} alt="plastik pose i vand" class="w-full"/>
<section id="hvadkandu" >
	<HvadKanDu ></HvadKanDu>
	</section>
	<section id="doner">
	<Doner  ></Doner>
	</section>
	<section id="shop" >
	<Shop ></Shop>
	</section>
	<section id="om" >
	<Om ></Om>
	</section>
	<Image src={om} alt="plastik flaske i vand" class="w-full"/>
</MainLayout>